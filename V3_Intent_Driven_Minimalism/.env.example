# IMIS V3 Environment Configuration
# Intent-Driven Minimalism Implementation

# Application Settings
PORT=5000
FLASK_ENV=production
USE_SSL=false
SSL_CERT=/path/to/cert.pem
SSL_KEY=/path/to/key.pem

# API Settings
API_KEYS=your-api-key-1,your-api-key-2
ENABLE_API_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Storage Paths
STORAGE_PATH=./storage
ARCHIVE_PATH=./archives
FEEDBACK_PATH=./feedback
LOG_PATH=./logs
PROMPTS_PATH=./prompts

# Email Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=materials-intake@example.com
SMTP_PASS=your-secure-password-here
SMTP_SECURE=true

# IMAP Settings
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=materials-intake@example.com
IMAP_PASS=your-secure-password-here
IMAP_MAILBOX=INBOX
IMAP_POLL_INTERVAL=60

# LLM API Settings
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4-vision-preview
LLM_API_ENDPOINT=https://api.openai.com/v1/chat/completions

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/materials-intake-v3

# Logging Settings
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGS=true

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url
SLACK_CHANNEL_ID=materials-intake-v3

# Performance Tuning
MAX_CONCURRENT_PROCESSES=5
TIMEOUT_SECONDS=120
RETRY_ATTEMPTS=3

# Confidence Envelope Settings
CE_TRUST_THRESHOLD=0.9
CE_FALLBACK_THRESHOLD=0.7
CE_FAILURE_THRESHOLD=0.4

# Agent Versioning
INTAKE_AGENT_VERSION=v3.0.0
INTERPRETER_AGENT_VERSION=v3.0.0
VERIFIER_AGENT_VERSION=v3.0.0
OUTBOUND_AGENT_VERSION=v3.0.0

# Intent-Driven Features
ENABLE_ASYNC_PROCESSING=true
ENABLE_DOCUMENT_TYPE_DETECTION=true
PRIORITIZE_MVS_ON_FALLBACK=true

# Archive Settings
ARCHIVE_RETENTION_DAYS=90
ARCHIVE_FORMAT=json

# Feedback System
FEEDBACK_NOTIFICATION_EMAIL=feedback@example.com
ENABLE_FEEDBACK_WEBHOOK=true
