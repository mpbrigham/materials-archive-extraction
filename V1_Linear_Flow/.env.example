# IMIS Production Environment Configuration
# Save as .env file in the project root directory

# Email Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=materials-intake@example.com
SMTP_PASS=your-secure-password-here
SMTP_SECURE=true

# IMAP Settings
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=materials-intake@example.com
IMAP_PASS=your-secure-password-here
IMAP_MAILBOX=INBOX
IMAP_POLL_INTERVAL=60

# LLM API Settings
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4
LLM_API_ENDPOINT=https://api.openai.com/v1/completions

# Storage Settings
STORAGE_TYPE=filesystem
STORAGE_PATH=./storage
STORAGE_RETENTION_DAYS=30

# Logging Settings
LOG_LEVEL=info
LOG_PATH=./logs
ENABLE_STRUCTURED_LOGS=true

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url
SLACK_CHANNEL_ID=materials-intake-notifications

# Performance Tuning
MAX_CONCURRENT_PROCESSES=5
TIMEOUT_SECONDS=120
RETRY_ATTEMPTS=3

# Security
ENABLE_API_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
